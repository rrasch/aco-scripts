+@trace
+def _is_arabic_char(ch: str) -> bool:
+    # Conservative: only reverse when unicode name contains "ARABIC"
+    # (This leaves Latin and punctuation alone.)
+    return "ARABIC" in unicodedata.name(ch, "")
+
